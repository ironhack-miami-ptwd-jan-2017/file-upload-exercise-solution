<div class="container">
  <div class="row">
    <div class="class="col-sm-12"">
      <form action="/posts/<%= postId %>/comments" method="post" enctype="multipart/form-data">
        <div class="form-group">
          <label for="content">Comment</label>
          <textarea id="content" name="content" class="form-control"></textarea>
        </div>
        <div class="form-group">
          <label for="comment-picture">Image</label>
          <input type="file" id="comment-picture" name="comment-picture" class="form-control">
        </div>

        <button type="submit" name="button">Create Comment</button>
      </form>
    </div>
  </div>
</div>
