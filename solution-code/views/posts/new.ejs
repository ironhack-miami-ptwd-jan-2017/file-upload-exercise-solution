<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <form action="/posts" method="post" enctype="multipart/form-data">
        <div class="form-group">
          <label for="content">Content</label>
          <textarea id="content" name="content" class="form-control"></textarea>
        </div>
        <div class="form-group">
          <label for="post-picture">Image</label>
          <input type="file" id="post-picture" name="post-picture" class="form-control">
        </div>

        <button type="submit" name="button">Create Post</button>
      </form>
    </div>
  </div>
</div>
